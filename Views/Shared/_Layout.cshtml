<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - KSTY</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/KSTY.styles.css" asp-append-version="true" />
     <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Add the Font Awesome library -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <style>
        header .logo {
            color: white;
        }

        header a {
            text-decoration: none;
        }
    </style>
</head>
<body>
    <header>
        <a href="#" class="logo"><span>K</span>hách <span>S</span>ạn <span>T</span>ình <span>Y</span>êu</a>
        <nav class="navbar">
            <a asp-area="" asp-controller="Home" asp-action="Index">Trang chủ</a>
            <a asp-area="" asp-controller="Home" asp-action="Phong">Phòng</a>
            <a asp-area="" asp-controller="Home" asp-action="Dichvu">Dịch vụ</a>
            <a asp-area="" asp-controller="Home" asp-action="Checkin">Check in</a>
            <a asp-area="" asp-controller="Home" asp-action="Gioithieu">Giới thiệu</a>
            <a asp-area="" asp-controller="Home" asp-action="lienhe">Liên Hệ</a>
        </nav>
        <div class="icons">
            <i class="fas fa-search" id="search-btn"></i>
            <a asp-area="" asp-controller="Home" asp-action="Login"><i class ='fas fa-user-alt'></i></a>
            <i class="fas fa-sign-out-alt" id="logout-btn"></i>
        </div>

        <form action="" class="search-bar-container">
            <input type="search" id="search-bar" placeholder="Tìm kiếm tại đây...">
            <label for="search-bar" class="fas fa-search"></label>
        </form>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>